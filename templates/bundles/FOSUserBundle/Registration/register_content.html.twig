<div class="container" style="margin-top: 60px; margin-bottom: 80px">
    <div class="row" style="display: flex; align-items: center; justify-content: center">
        <div class="card">
        {% if (app.session.flashbag.has('success') != false) %}
            {% for message in app.flashes('success') %}
                <h2 class="centered">{{ message }}</h2>
                <div class="form-wrapper">
                    <div class="form-message">
                        <p>Пользователь успешно зарегистрирован</p>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="form-wrapper">
                <h3 style="text-align: center">Регистрация</h3>
                    {{ form_start(form) }}
                    {{ form_end(form) }}
            </div>
        {% endif %}
        </div>
    </div>
</div>