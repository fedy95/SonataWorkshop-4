{% set classError = '' %}
<div class="container" style="margin-top: 60px; margin-bottom: 80px">
    <h3 style="text-align: center">Вход</h3>

    <div class="row" style="display: flex; align-items: center; justify-content: center">
        <div class="col-md-6 col-md-offset-3">
            <form class="login-form default-form" action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                {% endif %}
                {% if error %}
                    <div class="login-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% set classError = 'error' %}
                {% endif %}
                <div class="form-group">
                    <label class="control-label" for="username">Введите email</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}"
                           required="required" class="form-control {{ classError }}"/>
                </div>

                <div class="form-group">
                    <label class="control-label" for="password">Введите пароль</label>
                    <div class="password-wrapper">
                        <input type="password" id="password" name="_password" required="required"
                               class="form-control {{ classError }}"/>
                        <a href="#" id="show-password" class="show-password"></a>
                    </div>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label class="login-remember" for="remember_me">
                            <input type="checkbox" id="remember_me" class="login-remember" name="_remember_me"
                                   value="on"/>
                            Запомнить меня
                        </label>
                    </div>
                </div>

                <div class="row">
                    <div class="forgot-password col-md-6">
                        <a href="{{ path('fos_user_resetting_request') }}" class="blue-link">Забыли пароль?</a>
                    </div>
                    <div class="col-md-6 text-right">
                        <input class="btn btn-dark" type="submit" id="_submit" name="_submit"
                               value="Войти"/>
                    </div>
                    <div class="forgot-password col-md-12">
                        <a href="{{ path('fos_user_registration_register') }}" class="blue-link">Регистрация</a>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
