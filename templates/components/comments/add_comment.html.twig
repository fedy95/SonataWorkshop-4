{% extends "base.html.twig" %}

{% block main %}
    <div class="container" style="margin-top: 60px; margin-bottom: 80px">
        <div class="card">
            {% if (app.session.flashbag.has('success') != false) %}
                {% for message in app.flashes('success') %}
                    <h2 class="centered">{{ message }}</h2>
                {% endfor %}
            {% endif %}
            <div class="card-body col-md-12">
                {{ form_start(form) }}
                {{ form_row(form.house) }}
                {{ form_row(form.title) }}
                {{ form_row(form.description) }}
                <hr>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}