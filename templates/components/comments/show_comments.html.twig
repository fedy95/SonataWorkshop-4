{% extends "base.html.twig" %}

{% block main %}
    <div class="container" style="margin-top: 60px; margin-bottom: 80px">
        <h5 class="card-title" style="text-align: center">Комментарии</h5>
        {% for comment in comments %}
            <div class="card">
                <div class="container">
                    <div class="card-body col-md-12">
                        {{ comment.title }} - {{ comment.house }}
                        <hr>
                        <br>
                        {{ comment.description }}
                        <hr>
                        <br>
                        {{ comment.user }} - {{ comment.date }}
                    </div>
                </div>
                <div class="text-right">
                    {% if app.user %}
                        <a href="{{ path('add.comment') }}"
                           class="card-link">Добавить комментарий</a>
                    {% else %}
                        <a href="{{ path('fos_user_registration_register') }}"
                           class="card-link">Для добавления комментариев необходимо зарегистрироваться</a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

